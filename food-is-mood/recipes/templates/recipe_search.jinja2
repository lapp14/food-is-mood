{% if recipes is defined %}
  {% for item in recipes %}
  <div class="recipe-list-item">
    <a href="{{request.route_url('recipe_view', uid=item.recipe.uid)}}">
      <h2>{{item.recipe.title}}</h2>
      <span class="recipe-rating">
        <!-- 
          Icons used from Hand Drawn Web Icon Set, Pawel Kadysz, Founder of 177DESIGNS 
          author page: http://177icons.com/hand-drawn-web-icon-set
          download: https://www.iconfinder.com/iconsets/Hand_Drawn_Web_Icon_Set
        -->
        {% for n in range(item.recipe.rank) %}
          <img src="{{request.static_url('recipes:img/iconfinder_star_full_66927.png')}}" />
        {% endfor %}
        {% for n in range(5 - item.recipe.rank) %}
          <img src="{{request.static_url('recipes:img/iconfinder_star_empty_66881.png')}}" />
        {% endfor %}
      </span>
      <p>
        {{item.recipe.description|safe}}
      </p>
      <div class="recipe-tags">
        {% for tag in item.tag_names %}
          <span>{{tag.tag}}</span>
        {% endfor %}
      </div>
    </a>
  </div>
  {% endfor %}
{% else %}
<span class="error search-error">
  No recipes match your search!
</span>
{% endif %}
